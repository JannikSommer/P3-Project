<Window x:Class="WPF_PC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PC"
        mc:Ignorable="d" FontSize="16" FontFamily="Segoe UI Light"
        Title="Centralized Controller" Height="550" Width="960" 
        WindowStartupLocation="CenterScreen" MinWidth="960" MinHeight="550" Closing="Window_Closing">
    <Grid>

        <!--Grid Definition-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <!--Buttons-->

        <Button x:Name="createCycleCount" Content="Opret Optællings Cyklus" Width="250" Height="35"
                Grid.Column="1" Grid.Row="1" FontSize="16" Margin="10" HorizontalAlignment="Center" Click="createCycleCount_Click" />

        <Button x:Name="showLog" Content="Vis Log" Width="100" Height="35"
                Grid.Column="4" Grid.Row="1" FontSize="16" Margin="10" HorizontalAlignment="Right" Click="showLog_Click" />

        <Button x:Name="editCycle" Content="Rediger Cyklus" Width="150" Height="35"
                Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" FontSize="16" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center" Click="editCycle_Click" />

        <Button x:Name="finishCycle" Content="Færdiggør Cyklus" Width="160" Height="35"
                Grid.Column="2" Grid.Row="1" FontSize="16" Margin="180,10,10,10" HorizontalAlignment="Left" Click="finishCycle_Click" VerticalAlignment="Center" />

        <Button x:Name="showChosenType" Content="Vis" Width="60"
                Grid.Column="2" Grid.Row="3" FontSize="16"  Margin="10,10,10,10" HorizontalAlignment="Left" Click="showChosenType_Click" />

        <Button x:Name="changeLanguage" Content="Dansk" Width="100" Height="35"
                Grid.Column="4" Grid.Row="1" FontSize="16" Margin="10,10,130,10" HorizontalAlignment="Right" Click="changeLanguage_Click" />

        <!--Combobox-->

        <ComboBox x:Name="comboBoxChooseGet" Grid.Column="1" Grid.Row="3" Width="250" Margin="10" HorizontalAlignment="Center" SelectionChanged="comboBoxChooseGet_SelectionChanged" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!--Error Labels-->

        <Label x:Name="labelWarning" Content="Vælg venligst den ønskede funktion" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"
                 HorizontalAlignment="Center" FontSize="12" Height="28" Margin="0,0,0,5" Foreground="Red" Visibility="Hidden" />

        <!--Overview Numbers and their text labels.-->

        <Label x:Name="activeClients" Content="Aktive klienter:" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,10,10,10" />

        <Label x:Name="totalCount" Content="Totalt Optalte:" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,30,10,10" />

        <Label x:Name="totalCountDifference" Content="Optalte med difference:" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,50,10,5" />

        <Label x:Name="acticeClients" Content="0" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"
               Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,10,10,10" Width="160" />

        <Label x:Name="overviewTotalCounted" Content="0 / 0 (0%)" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"
               Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,30,10,10" Width="180" />

        <Label x:Name="overviewTotalCountedWithDifference" Content="0 / 0 (0%)" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"
               Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,50,10,5" Width="180" />

        <!--Datagrid, Where items is shown-->

        <DataGrid x:Name="dataGridMain" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="4" Margin="10,0,10,0" FontSize="14" FrozenColumnCount="1" CanUserReorderColumns="False" CanUserResizeColumns="False" >

            <!--Datagrid, Header Color and style-->

            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="LightGray" />
                    <Setter Property="BorderThickness" Value="0,0,1,1" />
                    <Setter Property="BorderBrush" Value="Black" />
                </Style>
            </DataGrid.Resources>

            <!--Datagrid, Column header and text bindings-->

            <DataGrid.Columns>

                <DataGridTextColumn Header=" ID" Binding="{Binding itemID}" Width="90" CanUserResize="False" />
                <DataGridTextColumn Header=" Navn" Binding="{Binding itemName}" Width="130" CanUserResize="False" />
                <DataGridTextColumn Header=" Lokationer" Binding="{Binding itemLocation}" Width="*" CanUserResize="False" />
                <DataGridTextColumn Header=" Optalt" Binding="{Binding itemHasBeenCounted}" Width="70" CanUserResize="False" />
                <DataGridTextColumn Header=" Optalt Fra Lageret" Binding="{Binding itemInStorageCount}" Width="130" CanUserResize="False" />
                <DataGridTextColumn Header=" Antal Fra Serveren" Binding="{Binding itemServerCount}" Width="120" CanUserResize="False" />
                <DataGridTextColumn Header=" Difference" Binding="{Binding itemCountVariation}" Width="80" CanUserResize="False" />

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
